@{
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="container">
<h1>Hello from Newsletter Index</h1>
    <div class="row">
        <div class="col md-6">
            <form asp-controller="Newsletter" asp-action="AddEmail" method="post">
                <label for="email">Join Our Newsletter!</label>
                <input type="text" name="email" id="email"/>
                <input class="btn" type="submit" value="Join"/>
            </form>
        </div>
    </div>
</div>